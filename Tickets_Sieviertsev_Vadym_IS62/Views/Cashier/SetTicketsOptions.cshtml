@model Tickets_Sieviertsev_Vadym_IS62.Models.TicketFilterViewModel

@{
    ViewBag.Title = "Set Tickets Options";
}

<h2>Set options for tickets search</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-10">
        <div class="form-group">
            <label>Route</label>
            @Html.DropDownList("Routes", null, null, new { @class = "form-control bg-dark border-grey colorWhite" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label>Carriage type</label>
            @Html.DropDownList("CarriageTypes", null, null, new { @class = "form-control bg-dark border-grey colorWhite" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.LabelFor(m => m.Date, new { @class = "control-label " })
            @Html.ValidationMessageFor(m => m.Date, "", new { @class = "Denied" })
            <input class="form-control" type="date" id="datepicker" name="Date" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Find    " class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
